<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SCROLLER_ID"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/p3"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity">

        <include
            android:id="@+id/appBarLayout"
            layout="@layout/toolbar">
        </include>

        <TextView
            android:id="@+id/page3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1.0"
            android:lineSpacingExtra="10dp"
            android:maxLines="700"
            android:scrollbars="vertical"
            android:text="@string/page_3"
            android:textColor="@color/text"
            android:textSize="16dp"
            android:paddingBottom="175dp"/>



        <Button
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="Remain calm \n and explain"
            android:textSize="18dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp"
            android:layout_alignLeft="@id/page3"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text"
            android:typeface="serif" />

        <Button
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_alignRight="@+id/page3"
            android:background="@color/background"
            android:text="Panic and deny \n the accusation"
            android:textColor="@color/text"
            android:textSize="18dp"
            android:typeface="serif" />


    </RelativeLayout>
</ScrollView>