<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity">

        <include
            android:id="@+id/appBarLayout"
            layout="@layout/toolbar">
            </include>

        <TextView
            android:id="@+id/stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1.0"
            android:lineSpacingExtra="10dp"
            android:maxLines="700"
            android:paddingBottom="175dp"
            android:scrollbars="vertical"
            android:text="Statistics"
            android:textColor="@color/text"
            android:textSize="50dp" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="97dp"
        android:layout_alignTop="@+id/stats"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/strength" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="101dp"
        android:layout_height="93dp"
        android:layout_alignStart="@+id/appBarLayout"
        android:layout_alignTop="@+id/appBarLayout"
        android:layout_marginStart="23dp"
        android:layout_marginTop="243dp"
        app:srcCompat="@drawable/intelligence" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="115dp"
        android:layout_alignStart="@+id/appBarLayout"
        android:layout_alignTop="@+id/appBarLayout"
        android:layout_marginStart="31dp"
        android:layout_marginTop="342dp"
        app:srcCompat="@drawable/agility" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="112dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/appBarLayout"
        android:layout_alignTop="@+id/appBarLayout"
        android:layout_marginStart="19dp"
        android:layout_marginTop="470dp"
        app:srcCompat="@drawable/charm" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="112dp"
        android:layout_height="83dp"
        android:layout_alignStart="@+id/appBarLayout"
        android:layout_alignTop="@+id/appBarLayout"
        android:layout_marginStart="19dp"
        android:layout_marginTop="565dp"
        app:srcCompat="@drawable/luck" />




    <Button
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Resume"
        android:textSize="20dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"
        android:typeface="serif" />


</RelativeLayout>